<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/subscriber_profile_item_layout_height"
    android:orientation="vertical"
    android:tag="@string/subscriber_details_profile_layout_tag">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_padding">

        <ImageView
            android:id="@+id/subscriber_profile_avatar"
            android:layout_width="@dimen/subscriber_profile_img_dimen"
            android:layout_height="@dimen/subscriber_profile_img_dimen"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/subscriber_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/subscriber_profile_avatar"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_padding"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subscriber_details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/subscriber_details_name"
            android:layout_toRightOf="@id/subscriber_profile_avatar"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/layout_padding"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/subscriber_details_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/subscriber_details_location"
            android:layout_toRightOf="@id/subscriber_profile_avatar"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subscriber_details_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/subscriber_details_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/subscriber_details_followers"
            android:gravity="right|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/subscriber_details_publicrepos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/subscriber_details_following"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </RelativeLayout>

</LinearLayout>